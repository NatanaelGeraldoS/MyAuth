<%- include('header'); -%>
<div class="container">
    <div class="background-glassmorphism mx-auto">
        <h2 class="text-center">Forgot Password</h2>
        <form>
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input
                    type="email"
                    name="email"
                    id="email"
                    class="form-control"
                    placeholder="Enter your email"
                    required
                />
            </div>
            <button type="submit" class="btn btn-glass w-100 py-2 mb-3">
                Reset Password
            </button>
            <div class="text-center mt-3">
                Don't have an account?
                <a href="/register" class="text-purple underline-hover"
                    >Register</a
                >
            </div>
        </form>
    </div>
</div>
<%- include('footer') %>
